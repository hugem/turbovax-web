<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Name</th>
      <th>Address</th>
      <th>Area</th>
      <th>Enabled</th>
      <th>Portal key</th>
      <th>Portal uuid</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Last available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.uuid %></td>
        <td><%= location.name %></td>
        <td><%= location.address %></td>
        <td><%= location.area %></td>
        <td><%= location.enabled %></td>
        <td><%= location.portal_key %></td>
        <td><%= location.portal_uuid %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.last_available %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

